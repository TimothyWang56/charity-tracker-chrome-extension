{
    "name": "Charity Tracker",
    "version": "1.0",
    "description": "Pledge, Find, Donate!",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
      "scripts": ["./scripts/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "run_at": "document_end",
        "js": ["./scripts/alert.js"]
      }
    ],
    "browser_action": {
      "default_popup": "templates/pledge.html"
    },
    "icons": {
      "16": "images/charitytrackericon128.png",
      "32": "images/charitytrackericon128.png",
      "48": "images/charitytrackericon128.png",
      "128": "images/charitytrackericon128.png"
    },
    "options_page": "templates/options.html",
    "manifest_version": 2
}
